<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FragmentSecret"
        android:background="#D3D2D2">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#AFA4A4"
                >
                <ImageView
                    android:id="@+id/ivBack"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_back"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    />
            </RelativeLayout>
            <TextView
                android:id="@+id/tvSecret"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="10dp"
                android:text="Secret Notes"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="70dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvNoteEmpty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Notes Data Empty"
                android:visibility="invisible"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_notes_notes"
                android:layout_width="match_parent"
                android:layout_height="595dp"
                android:layout_below="@id/tvSecret"
                tools:listitem="@layout/item_note" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_add_secret"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@color/white"
                android:foregroundGravity="bottom"
                app:fabSize="normal"
                app:layout_anchorGravity="bottom|end"
                app:srcCompat="@drawable/ic_add" />
        </RelativeLayout>
    </FrameLayout>
</layout>